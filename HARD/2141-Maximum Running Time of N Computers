class Solution {
    public long maxRunTime(int n, int[] batteries) {
        long left = 0;
        long right = 0;
        for (int battery : batteries) {
            right += battery;
        }

        while (left < right) {
            long mid = (left + right + 1) >> 1;

            long totalUsableCapacity = 0;
            for (int battery : batteries) {
                totalUsableCapacity += Math.min(mid, battery);
            }

            if (totalUsableCapacity >= n * mid) {
                left = mid;
            } else {
                right = mid - 1;
            }
        }

        return left;
    }
}
